<div class="row">
  <div class="span8">
    <div class="box">
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form-horizontal', method: :put }) do |f| %>
        <fieldset>
          <legend><%= t('users.edit_password') %></legend>
          <%= f.error_notification %>

          <%= f.input :password, required: true %>
          <%= f.input :password_confirmation, required: true %>

          <%= f.input :reset_password_token, as: :hidden %>
          <%= f.full_error :reset_password_token %>
          <div class="form-actions">
            <%= f.button :submit, t('users.edit_password'), class: 'btn btn-success', data: {disable_with: t("common.submitting")} %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>

  <div class="span4">
    <div class="box">
      <h3 class="title"><%= t("users.already_have_account")%></h3>
      <%= render "links" %>
    </div>
  </div>
</div>