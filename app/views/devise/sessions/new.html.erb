<div class="row">
  <div class="span8">
    <div class="box">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <fieldset>
          <legend><%= t('common.login') %></legend>
            <%= f.input :login, required: false, autofocus: true %>
            <%= f.input :password, required: false %>
            <%= f.input :remember_me, label: false, inline_label: t('common.remember_me'), as: :boolean if devise_mapping.rememberable? %>
          <div class="form-actions">
            <%= f.button :submit, t('common.login'), class: 'btn btn-primary span2' %>
            <a href="#" class="btn btn-primary" onclick="$('form').submit()"><i class="icon-user icon-white"></i> <%= t('common.login') %></a>
            <%= link_to "#", class: 'btn btn-primary', onclick: "$('form').submit()" do %>
            <%= content_tag :i, '', class: "icon-user icon-white" %> <%= t('common.login') %>
            <% end %> 
          </div>
        </fieldset>  
      <% end %>

    </div>
  </div>
  <div class="span4">
    <div class="box">
      <h3 class="title">还没有帐号？</h3>
      <%= render "links" %>
    </div>
  </div>
</div>