<div class="row">
  <div class="span8">
    <div class="box">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', method: :put }) do |f| %>
        <fieldset>
          <legend><%= t("users.personal_information")%></legend> 
          <%= f.error_notification %>
          <%= f.input :username, required: true, autofocus: true %>
          <%= f.input :email, required: true %>
          <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
          <div class="form-actions">
            <%= f.button :submit, t('common.update'), class: 'btn btn-primary', disable_with: t('common.saving') %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>

  <div class="span4">
    <div class="box">
      <h3 class="title" ><%= t("users.delete_my_account")%></h3>
      <p><%= t("users.dont_like_it")%> <%= link_to(t("users.delete_this_account"), registration_path(resource_name), :confirm => "删除后无法恢复，你确定吗?", :class => "btn btn-danger", :method => :delete )%></p>
    </div>
  </div>
</div>
