<div class="row">
  <div class="span8">
    <div class="box">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
        <fieldset>
          <legend><%= t("users.register_user")%></legend> 
          <%= f.error_notification %>
          <%= f.input :name, required: true, autofocus: true, hint: t("users.suggest_using_twitter_id")  %>
          <%= f.input :email, required: true, placeholder: "foo@bar.com" %>
          <%= f.input :password, required: true %>
          <%= f.input :password_confirmation, required: true %>
          <div class="form-actions">
            <%= f.button :submit, t('common.register'), class: 'btn btn-primary span2', disable_with: t("common.submitting") %>
          </div>
        </fieldset>  
      <% end %>
    </div>
  </div>
  <div class="span4">
    <div class="box">
      <h3 class="title"><%= t("users.already_have_account")%></h3>
      <%= render "links" %>
    </div>
  </div>
</div>
