<div class="row">
  <div class="span8">
    <div class="box">
      <%= simple_form_for(@profile, method: :put, html: { multipart: true, class: 'form-horizontal' }) do |f| %>
        <fieldset>
          <legend><%= t("users.personal_information")%></legend> 
          <%= f.error_notification %>
          <%= f.input :nickname, autofocus: true, input_html: { class: 'span2' } %>
          <%= f.input :avatar, as: :file %>
          <%= f.input :gender, as: :radio_buttons, item_wrapper_class: 'inline', collection: [:male, :female] %>
          <%= f.input :birthday, as: :string, input_html: { class: 'datepicker span2' } %>
<!--           <div class="control-group">
            <%= f.label :birthday %>
            <div class="controls">
              <div class="input-append datepicker date">
                <%= f.text_field :birthday, readonly: true, class: 'span2' %>
                <span class="add-on">
                  <i class="icon-calendar"></i>
                </span>
              </div>
            </div>
          </div> -->
          <%= f.input :location, input_html: { class: 'span2' } %>
          <%= f.input :website, placeholder: 'http://', input_html: { class: 'span4' } %>
          <%= f.input :tagline, input_html: { class: 'span4' } %>
          <%= f.input :bio, as: :text, input_html: { rows: '5', class: 'span4' } %>
          <div class="form-actions">
            <%= f.button :submit, t('common.update'), class: 'btn btn-primary', data: {disable_with: t('common.saving')} %>
            <%= submit_tag t('common.cancel'), type: :reset, class: "btn btn-danger" %>
          </div>
        </fieldset>
      <% end %>
    </div>
  </div>

  <div class="span4">
    <div class="box">
      <h3 class="title">修改头像</h3>
      <%= image_tag(current_user.profile.avatar.url(:huge), class: 'vertical-inherit') %>
      <%= image_tag(current_user.profile.avatar.url(:large), class: 'vertical-inherit') %>
      <%= image_tag(current_user.profile.avatar.url(:normal), class: 'vertical-inherit') %>
    </div>
    <%= render "common/mini_profile" %>
  </div>
</div>