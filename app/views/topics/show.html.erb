<div class="row">
  <div class="span8">
    <div id="topic-show" class="box">
        <div class="topic-header">
          <div class="content clearfix">
            <%= image_tag(@topic.user.profile.avatar.url(:large), class: 'avatar pull-right') %>
            <h1 class="entry-title"><%= truncate(@topic.title, length: 64) %></h1>
            <small class="metadata"><%= t("common.by") %> <strong><%= link_to(@topic.user.display_name, user_path(@topic.user), class: 'author') %></strong> <%= timeago(@topic.created_at, class: "published") %><%= t("common.published")%>, <%= @topic.views_count %> <%= t("common.read_times")%></small>
          <div class="topic-content">
            <%= raw @topic.content_html %>
          </div>
          </div>
        </div>
        <div class="topic-toolbox clearfix">
          <ul class="pull-right">
            <li><i class="icon-eye-open"></i><strong> <%= @topic.views_count %></strong></li>
            <li><i class="icon-heart"></i><strong> 23</strong></li>
            <li><i class="icon-comment"></i><strong> 45</strong></li>
            <li><i class="icon-bookmark"></i></li>
            <% if owner?(@topic) or current_user.has_role? :admin %>
            <li>
              <%= link_to edit_topic_path(@topic), class: "", title: "修改本帖" do %>
                <i class="icon-pencil"></i>
              <% end %>
            </li>
            <li>
              <%= link_to topic_path(@topic.id), method: :delete, confirm: t("common.confirm_delete"), class: "", title: "删除本帖" do %>
                <i class="icon-trash"></i>
              <% end %>
            </li>
            <% end %>
          </ul>
          
        </div>    
    </div>
    <div class="box">
      
    </div>
  </div>
  <div class="span4">
    <%= render "common/mini_profile" %>
    <div class="box">

    </div>
  </div>
</div>