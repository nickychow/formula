<li class="topic-item">
  <div class="item-detail">
    <div class="content clearfix">
      <%= image_tag(topic_item.user.profile.avatar.url(:normal), class: 'avatar pull-left') %>
      <span class="item-title">
        <%= link_to(truncate(topic_item.title, length: 64), topic_path(topic_item), title: topic_item.title) %>
      </span>
      <span class="small clearfix">
        <%= link_to(topic_item.node.name, node_topics_path(topic_item.node), class: 'node') %> • 
        <strong>
          <%= link_to(topic_item.user.display_name, user_path(topic_item.user.username), class: 'author') %>
        </strong> • 
        <% if topic_item.last_reply.blank? %>
        <%= timeago(topic_item.created_at, class: 'published') %>
        <% else %>
        <%= timeago(topic_item.replied_at, class: 'published') %> • <%= t('common.reply_from') %>
        <strong>
          <%= link_to(topic_item.last_reply.user.display_name, user_path(topic_item.last_reply.user.username), class: 'author') %>
        </strong>
        <strong class="pull-right badge"><i class="icon-comment"></i> <%= topic_item.replies_count %></strong>
        <% end %>
      </span>
    </div>
  </div>
</li>