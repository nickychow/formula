 <% if @reply.errors.blank? %>
  if($("#replies-show").length == 0){
    location.href = location.href;
  }
  else {   
    $(".summary").html('<%= escape_javascript(render "topics/summary", topic: @topic) %>');
    $('<%= escape_javascript(render "reply_item", reply_item: @reply, reply_item_counter: @topic.replies_count - 1) %>').hide().appendTo("#replies-show ul.replies").slideDown(200);
    Topics.replyCallback(1,'<%= escape_javascript(@msg) %>');
  }
<% else %>
  Topics.replyCallback(0,'<%= escape_javascript(@msg) %>');
<% end %>