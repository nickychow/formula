 <% if @reply.errors.blank? %>
  if($("#replies-show").length == 0){
    location.href = location.href;
  }
  else {   
    $(".summary").html('<%= escape_javascript(render "topics/summary", topic: @topic) %>');
    $("#replies-show ul.replies").append('<%= escape_javascript(render "reply_item", reply_item: @reply) %>');
    $("abbr.timeago", $("#replies-show .reply-item").last()).timeago().tooltip();
    $("#new_reply")[0].reset();
  }
<% else %>
  
<% end %>