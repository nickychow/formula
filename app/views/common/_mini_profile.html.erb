<% if user_signed_in? %>
  <div class="box mini-profile">
    <div class="profile-summary">
      <a href="#" class="account-summary" data-nav="profile">
        <div class="content">
          <div class="account-group clearfix">
            <%= image_tag(current_user.profile.avatar.url(:normal), class: 'avatar') %>
            <b class="nickname"><%= current_user.display_name %></b>
            <small class="metadata">View my profile page</small>
          </div>
        </div>
      </a>
    </div>
    <div class="profile-stats">
      <ul class="stats">
        <li>
          <a href="/#!/5ive" data-element-term="tweet_stats">
            <strong>23</strong> Shares
          </a>
        </li>
        <li><a href="/#!/following" data-element-term="following_stats" class="following_stats"><strong><%= current_user.follow_count %></strong> Following</a></li>
        <li><a href="/#!/followers" data-element-term="follower_stats" class="follower_stats"><strong><%= current_user.followers_count %></strong> Followers</a></li>
      </ul>
    </div>
  </div>
<% end %>
